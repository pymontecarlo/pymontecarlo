<mc:options xmlns:mc="http://pymontecarlo.sf.net"
    xmlns:mc-pen="http://pymontecarlo.sf.net/penelope" name="nistmonte_elastic_cross_section_elsepa_spc_1"
    version="4">
    <beam>
        <mc:pencilBeam aperture="0.0" energy="20000.0"
            particle="electron">
            <origin x="0" y="0" z="0.01" />
            <direction x="0" y="0" z="-1" />
        </mc:pencilBeam>
    </beam>
    <geometry>
        <mc:substrate rotation="0" substrate="0" tilt="0">
            <materials>
                <mc:material absorptionEnergyElectron="50.0"
                    absorptionEnergyPhoton="50.0"
                    absorptionEnergyPositron="50.0" density="6.61644"
                    index="1" name="AlFe">
                    <composition>
                        <element weightFraction="0.759" z="26" />
                        <element weightFraction="0.241" z="13" />
                    </composition>
                </mc:material>
            </materials>
            <bodies>
                <mc:body index="0" material="1" />
            </bodies>
        </mc:substrate>
    </geometry>
    <detectors>
        <mc:electronFractionDetector _key="electron-fraction" />
        <mc:photonIntensityDetector _key="xrays-intensity"
            azimuth_max="6.28318530718" azimuth_min="0" elevation_max="0.0"
            elevation_min="0.916297857297" />
        <mc:phiRhoZDetector _key="prz" azimuth_max="6.28318530718"
            azimuth_min="0" elevation_max="0.0" elevation_min="0.916297857297"
            channels="100" />
        <mc:timeDetector _key="time" />
    </detectors>
    <limits>
        <mc:showersLimit showers="10000" />
    </limits>
    <models>
        <mc:model name="Berger &amp; Seltzer 1983" type="ionization potential" />
        <mc:model name="ELSEPA" type="elastic cross section" />
        <mc:model name="Joy and Luo 1989" type="energy loss" />
        <mc:model name="Bote and Salvat 2008" type="ionization cross section" />
        <mc:model name="NIST-Chantler 2005" type="mass absorption coefficient" />
    </models>
</mc:options>
